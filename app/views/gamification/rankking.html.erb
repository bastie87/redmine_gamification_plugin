<%=content_tag(:h2, l(:ranking)) %> 

<div id="user-ranking">
  <table border="1">
    <tr>
      <%=content_tag(:th, l(:ranking)) %>
      <%=content_tag(:th, l(:username)) %> 
      <%=content_tag(:th, l(:ticket_count)) %>
    </tr>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.user.name %></td>
        <td><%= user.point %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= render 'sidebar' %>
